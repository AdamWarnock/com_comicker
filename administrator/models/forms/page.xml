<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_COMICKER_FORM_LBL_PAGE_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_COMICKER_FORM_LBL_PAGE_CREATED_BY"
            description="COM_COMICKER_FORM_DESC_PAGE_CREATED_BY"  /> 

       <field name="pagetitle" type="text"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGETITLE"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGETITLE" 
                 default="Comic Page" 
                
                 required="true" 
            filter="safehtml" /> 

       <field name="pageimage" type="media"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGEIMAGE"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGEIMAGE" 
                
                
                 required="true" 
            directory="/" /> 

       <field name="pagedescription" type="textarea"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGEDESCRIPTION"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGEDESCRIPTION" 
                
                
                
            filter="safehtml"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="pagenotes" type="textarea"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGENOTES"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGENOTES" 
                
                
                
            filter="safehtml"
            option_on="Yes"
            option_off="Yes" /> 

 <field name="parentchapter" type="foreignkey" class="inputbox"
            label="COM_COMICKER_FORM_LBL_PAGE_PARENTCHAPTER"
            description="COM_COMICKER_FORM_DESC_PAGE_PARENTCHAPTER" input_type="list" table="#__comicker_chapters" key_field="id" value_field="id"  required="true"  /> 

       <field name="filter_parentchapter" type="sql" class="inputbox"
            onchange="this.form.submit();" translate="true"
            query="SELECT 0 AS `id`, 'COM_COMICKER_PAGES_PARENTCHAPTER_FILTER_DEFAULT_OPTION' AS `val` UNION SELECT `id`, `id` AS val FROM `#__comicker_chapters`" key_field="id" value_field="val"
             /> 

       <field name="pagetranscript" type="textarea"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGETRANSCRIPT"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGETRANSCRIPT" 
                
                
                
            filter="safehtml"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="pagemouseovertext" type="text"
                
            label="COM_COMICKER_FORM_LBL_PAGE_PAGEMOUSEOVERTEXT"
            description="COM_COMICKER_FORM_DESC_PAGE_PAGEMOUSEOVERTEXT" 
                
                
                
            filter="safehtml" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
