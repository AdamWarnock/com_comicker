<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_COMICKER_FORM_LBL_CHAPTER_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_COMICKER_FORM_LBL_CHAPTER_CREATED_BY"
            description="COM_COMICKER_FORM_DESC_CHAPTER_CREATED_BY"  /> 

       <field name="chaptertitle" type="text"
                
            label="COM_COMICKER_FORM_LBL_CHAPTER_CHAPTERTITLE"
            description="COM_COMICKER_FORM_DESC_CHAPTER_CHAPTERTITLE" 
                 default="Chapter Title" 
                
                 required="true" 
            menu_published="0"
            filter="safehtml"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="chapterdescription" type="textarea"
                
            label="COM_COMICKER_FORM_LBL_CHAPTER_CHAPTERDESCRIPTION"
            description="COM_COMICKER_FORM_DESC_CHAPTER_CHAPTERDESCRIPTION" 
                
                
                
            menu_published="0"
            filter="safehtml"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="chapterimage" type="media"
                
            label="COM_COMICKER_FORM_LBL_CHAPTER_CHAPTERIMAGE"
            description="COM_COMICKER_FORM_DESC_CHAPTER_CHAPTERIMAGE" 
                
                
                
            directory="/" /> 

 
		<field name="chaptertags" type="tag" mode="ajax" label="Tags" description="Tags that fit the chapter" multiple="true" custom="allow"  /> 

 <field name="parentcomic" type="foreignkey" class="inputbox"
            label="COM_COMICKER_FORM_LBL_CHAPTER_PARENTCOMIC"
            description="COM_COMICKER_FORM_DESC_CHAPTER_PARENTCOMIC" input_type="list" table="#__comicker_comics" key_field="id" value_field="id"  required="true"  /> 

       <field name="filter_parentcomic" type="sql" class="inputbox"
            onchange="this.form.submit();" translate="true"
            query="SELECT 0 AS `id`, 'COM_COMICKER_CHAPTERS_PARENTCOMIC_FILTER_DEFAULT_OPTION' AS `val` UNION SELECT `id`, `id` AS val FROM `#__comicker_comics`" key_field="id" value_field="val"
             /> 

 <field name="parentchapter" type="foreignkey" class="inputbox"
            label="COM_COMICKER_FORM_LBL_CHAPTER_PARENTCHAPTER"
            description="COM_COMICKER_FORM_DESC_CHAPTER_PARENTCHAPTER" input_type="list" table="#__comicker_chapters" key_field="id" value_field="id"  /> 

       <field name="filter_parentchapter" type="sql" class="inputbox"
            onchange="this.form.submit();" translate="true"
            query="SELECT 0 AS `id`, 'COM_COMICKER_CHAPTERS_PARENTCHAPTER_FILTER_DEFAULT_OPTION' AS `val` UNION SELECT `id`, `id` AS val FROM `#__comicker_chapters`" key_field="id" value_field="val"
             /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
