<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_comicker</name>
    <creationDate>2015-07-07</creationDate>
    <copyright>Copyright (C) 2015. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Adam Warnock</author>
    <authorEmail>salsa.the.geek@gmail.com</authorEmail>
    <authorUrl>http://radboxstudio.com</authorUrl>
    <version>0.0.3</version>
    <description>Comicker is a webcomic manager for Joomla. It's designed to be easy to use and intuitive to understand. Get started by creating a Comic and adding some pages.</description>

    <scriptfile>script.php</scriptfile>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>comicker.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="languages/site">

			<language tag="en-AU">en-AU/en-AU.com_comicker.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_comicker.ini</language>
			<language tag="en-US">en-US/en-US.com_comicker.ini</language>
    </languages>
    <administration>
        <menu img="components/com_comicker/assets/images/s_com_comicker.png" >COM_COMICKER</menu>
        <submenu>

			<menu link="option=com_comicker&amp;view=comics" view="comics" img="components/com_comicker/assets/images/s_comics.png" alt="Comicker/Comics">COM_COMICKER_TITLE_COMICS</menu>

			<menu link="option=com_comicker&amp;view=chapters" view="chapters" img="components/com_comicker/assets/images/s_chapters.png" alt="Comicker/Chapters">COM_COMICKER_TITLE_CHAPTERS</menu>

			<menu link="option=com_comicker&amp;view=pages" view="pages" img="components/com_comicker/assets/images/s_pages.png" alt="Comicker/Pages">COM_COMICKER_TITLE_PAGES</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>comicker.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/administrator">

			<language tag="en-AU">en-AU/en-AU.com_comicker.ini</language>
			<language tag="en-AU">en-AU/en-AU.com_comicker.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_comicker.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_comicker.sys.ini</language>
			<language tag="en-US">en-US/en-US.com_comicker.ini</language>
			<language tag="en-US">en-US/en-US.com_comicker.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="comicker"/>
    </plugins>

</extension>
